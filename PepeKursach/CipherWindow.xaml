<Window x:Class="PepeKursach.CipherWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:PepeKursach"
        mc:Ignorable="d"
        Title="CipherWindow" Height="400" Width="500" WindowStartupLocation="CenterScreen" ResizeMode="NoResize">
    <Grid>
        <ScrollViewer HorizontalAlignment="Center" Height="315" Margin="0,10,0,0" VerticalAlignment="Top" Width="472">
            <TextBlock Name="cipherText" TextWrapping="Wrap" Text="Text" FontSize="13"/>
        </ScrollViewer>
        <Button Name="saveCipherButton" Content="Сохранить" HorizontalAlignment="Right" Margin="0,0,10,10" VerticalAlignment="Bottom" Width="75" Click="SaveCipherText"/>
        <Button Content="Закрыть" HorizontalAlignment="Left" Margin="10,0,0,10" VerticalAlignment="Bottom" Width="75" Click="CloseButton"/>

    </Grid>
</Window>
